{
  "name": "@somniaforge/sdk",
  "version": "1.2.0-beta.1",
  "description": "SomniaForge SDK - Zero-config TypeScript toolkit for building real-time games on Somnia Network",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build && npm test",
    "prepack": "npm run build"
  },
  "keywords": [
    "somnia-network",
    "gaming-sdk",
    "real-time-games",
    "multiplayer-games",
    "web3-gaming",
    "blockchain-games",
    "typescript-sdk",
    "viem",
    "websocket-events",
    "game-development",
    "react-components",
    "zero-config",
    "sub-second-transactions"
  ],
  "author": {
    "name": "SomniaForge Team",
    "email": "developers@somniaforge.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "viem": "^2.21.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "terser": "^5.44.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": "^5.0.0",
    "viem": "^2.21.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "viem": {
      "optional": false
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
